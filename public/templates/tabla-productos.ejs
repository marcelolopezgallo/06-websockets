<% if (products.length > 0) { %>
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Producto</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            <% products.forEach(function(p){ %>
                <tr>
                    <td>
                        <%=p.title%>
                    </td>
                    <td>
                        <%=p.price%>
                    </td>
                    <td>
                        <img src="<%=p.thumbnail%>" class="img-thumbnail" alt="Responsive image" />
                    </td>
                    <td>

                    </td>
                </tr>
                <% }) %>
        </table>
    </div>
<%} else{ %>
    <h3 class="alert alert-danger">no se encontraron datos</h1>
<% } %>